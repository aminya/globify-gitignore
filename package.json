{
  "name": "globify-gitignore",
  "version": "1.0.1",
  "description": "Convert Gitignore to Glob patterns",
  "homepage": "https://github.com/aminya/globify-gitignore",
  "repository": "https://github.com/aminya/globify-gitignore",
  "license": "MIT",
  "author": "Amin Yahyaabadi",
  "type": "module",
  "main": "dist/cjs/main.js",
  "module": "dist/esm/main.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "run-s clean && run-p build.*",
    "build.cjs": "tsc -p tsconfig.cjs.json",
    "build.esm": "tsc -p tsconfig.esm.json",
    "clean": "shx rm -rf dist",
    "docs": "shx rm -rf ./README.md && pnpm exec readme --path ./dev/docs/readme.md -y && pnpm exec ts-readme --header-depth 3 && pnpm run format",
    "format": "prettier --write .",
    "lint": "eslint . --fix",
    "prepare": "npm run build",
    "test": "jest",
    "test.format": "prettier . --check",
    "test.lint": "eslint ."
  },
  "prettier": "prettier-config-atomic",
  "dependencies": {
    "dedent": "^0.7.0",
    "is-valid-path": "^0.1.1",
    "remove": "^0.1.5"
  },
  "devDependencies": {
    "@types/dedent": "^0.7.0",
    "@types/is-valid-path": "^0.1.0",
    "@types/jest": "^29.2.5",
    "@types/node": "^16.10.2",
    "build-commit": "0.1.4",
    "cross-env": "7.0.3",
    "eslint": "7.32.0",
    "eslint-config-atomic": "^1.16.3",
    "jest": "^29.3.1",
    "npm-check-updates": "11.8.5",
    "npm-run-all2": "^6.0.4",
    "prettier-config-atomic": "^3.0.1",
    "readme-md-generator": "^1.0.0",
    "shx": "0.3.3",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "ts-readme": "^1.1.3",
    "typescript": "^4.4.3"
  },
  "optionalDependencies": {
    "make-unique": "^1.0.4",
    "sort-es": "^1.6.4"
  },
  "keywords": [
    "globify",
    "globby",
    "all",
    "array",
    "directories",
    "expand",
    "files",
    "filesystem",
    "filter",
    "find",
    "fnmatch",
    "folders",
    "fs",
    "glob",
    "globbing",
    "globs",
    "gulpfriendly",
    "match",
    "matcher",
    "minimatch",
    "multi",
    "multiple",
    "paths",
    "pattern",
    "patterns",
    "traverse",
    "util",
    "utility",
    "wildcard",
    "wildcards",
    "promise",
    "gitignore",
    "git"
  ],
  "activationHooks": [
    "core:loaded-shell-environment"
  ],
  "atomTestRunner": "./spec/runner"
}
